
<div class='main-wrapper'>
  <%= render 'shared/secondnavbar'%>

 <div id='dashboard-wrapper'>
    <div id='container-dash'>
      <section id='form-container'>
            <%= form_for @bank_account do |f| %> 
            <h1>New Bank Account</h1>

            <section class='mb-3'>
                <%= f.label :name , class:  "form-label" %>
                <%= f.text_field :name  , class: "form-control"%>
            </section>
            <section class='mb-3'>
                <%= f.label :routing_number, class:  "form-label" %>
                <%= f.number_field :routing_number  , class: "form-control" %>
            </section>
            <section class='mb-3'>
                  <%= f.label :account_number , class:  "form-label" %>
                  <%= f.text_field :account_number , class: "form-control" %>
            </section>
            <section class='button-container'>
              <%= f.submit "Submit", class: "btn btn-primary" %>
            </section>
          <% end %>
      </section>
  </div>
  </div>
</div>